<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>

        <variable
            name="quiz"
            type="com.chyngyz.quizapp.ui.models.Quiz" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            style="@style/text_style"
            android:layout_height="70dp"
            android:layout_marginTop="31dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@{quiz.question}" />

        <LinearLayout
            android:id="@+id/answers_btns"
            android:layout_width="match_parent"
            android:visibility="@{quiz.v1 != null ? View.VISIBLE : View.GONE}"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <Button
                android:id="@+id/q_btn1"
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:text="@{quiz.v1}" />

            <Button
                android:id="@+id/q_btn2"
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@{quiz.v2}" />

            <Button
                android:id="@+id/q_btn3"
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@{quiz.v3}" />

            <Button
                android:id="@+id/q_btn4"
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@{quiz.v4}" />

        </LinearLayout>

        <Button
            android:id="@+id/question_btn_yes"
            style="@style/btn_second_style"
            android:layout_width="match_parent"
            android:text="Yes"
            android:visibility="@{quiz.v1 != null ? View.GONE : View.VISIBLE}"
            android:backgroundTint="@color/white"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/question_btn_no"
            style="@style/btn_second_style"
            android:text="No"
            android:visibility="@{quiz.v1 != null ? View.GONE : View.VISIBLE}"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</layout>
